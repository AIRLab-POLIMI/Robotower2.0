<launch>
  <node pkg="rosserial_python" type="serial_node.py" respawn="true" name="rosserial_arduino" output="screen">
  <param name="~port" value="/dev/ttyACM0" />
  <param name="~baud" value="57600" />
  </node>

  <include file="$(find robogame_joystick)/launch/joystick.launch"/>
  <include file="$(find record_ros)/launch/record_ros.launch"/>


  <node name="record_bags" pkg="record_bag" type="record.py" respawn="true"/>
	
  <node name="forwarder" pkg="triskarone" type="forwarder" respawn="true"/>

  <node name="robogame_arduino" pkg="robogame_arduino" type="robogame_arduino_node" respawn="true" output="screen"/>

  <node name="robogame_game_manager" pkg="robogame_game_manager" type="robogame_game_manager_node" respawn="true" output="screen"/>

