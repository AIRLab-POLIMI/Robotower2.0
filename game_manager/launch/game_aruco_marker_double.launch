<launch>
	<arg name="markerId" default="704"/>
	<arg name="markerSize" default="0.14"/>						<!-- in m -->
	<arg name="eye" default="right"/>
	<arg name="marker1_frame" default="aruco_marker_frame"/>
	<arg name="marker2_frame" default="aruco_marker_frame"/>
	<arg name="ref_frame" default=""/>		
	<arg name="dct_normalization" default="True" />
    <arg name="dct_filter_size"   default="2" />						<!-- leave empty and the pose will be published wrt param parent_name -->

    <node pkg="aruco_ros" type="double" name="aruco_simple">    
        <remap from="/camera_info" to="/kinect2/sd/camera_info"/>
        <remap from="/image" to="/kinect2/sd/image_color_rect"/>
        <param name="image_is_rectified" value="True"/>
        <param name="marker_size" value="$(arg markerSize)"/>
        <param name="marker_id1" value="$(arg markerId)"/>
        <param name="marker_id2" value="$(arg markerId)"/>
        <param name="normalizeImage" value="$(arg dct_normalization)"/>
        <param name="dct_components_to_remove" value="$(arg dct_filter_size)"/>
        <param name="parent_name" value="kinect2_rgb_optical_frame" />
        <param name="child_name1" value="$(arg marker1_frame)" />
        <param name="child_name2" value="$(arg marker2_frame)" />
    </node>

</launch>