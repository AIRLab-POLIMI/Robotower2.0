<launch>

    <rosparam command="load" file="$(find arduino_publisher)/config/arduino.yaml" />
    <rosparam command="load" file="$(find tower_manager)/config/tower_config.yaml" />
    <rosparam command="load" file="$(find tower_tf_broadcaster)/config/tower_tf.yaml" />
    <rosparam command="load" file="$(find behavior_manager)/config/config.yaml" />

    <param name="enable_statistics" value="true" />

	<include file="$(find bayes_people_tracker)/launch/people_tracker.launch"/>
    <include file="$(find kinect_tracker)/launch/run.launch"/>
    <include file="$(find behavior_manager)/launch/run.launch" />

    <node pkg="player_feature" type="player_feature_node" name="player_feature" output="screen" respawn="false" />

    <node pkg="tower_manager" type="tower_manager_node" name="tower_manager" output="screen" respawn="false" />
    
    <node pkg="activity_recognition" type="classifier.py" name="activity_classifier" output="screen" respawn="false" />
    
    <node pkg="tower_tf_broadcaster" type="tower_tf_broadcaster_node" name="tower_tf_broadcaster_node" output="screen" respawn="false" />
    
	<node pkg="tower_tf_broadcaster" type="markers_broadcaster_node" name="markers_broadcaster_node" output="screen" respawn="false" />
	
	<!-- kinect_nodes --> 
	<include file="$(find robogame_kinectfeatures_extractor)/launch/run.launch"/>
	<!--<include file="$(find triskar)/launch/kinect2_bridge_nodes.launch"/> -->
    <!--<node pkg="logger" type="GUI2.py" name="logger_GUI" respawn="false" /> -->

</launch>
